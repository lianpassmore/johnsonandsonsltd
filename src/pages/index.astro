---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---

<!-- OPTIMIZED TITLE FOR LOCAL SEO -->
<Layout title="Johnson & Sons Ltd | Builders & Concrete Specialists Whangarei">
	
	<!-- NAV -->
	<nav class="fixed w-full z-50 bg-brand-dark/95 border-b border-gray-800 backdrop-blur-sm transition-all duration-300">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex items-center justify-between h-24">
				
				<!-- LOGO AREA -->
				<div class="shrink-0 flex items-center">
					<a href="#" class="group block">
						<img
							src="/logo-white.svg"
							alt="Johnson & Sons Ltd Builders Whangarei Logo"
							class="h-20 w-auto object-contain group-hover:opacity-90 transition-opacity"
						/>
					</a>
				</div>

				<!-- DESKTOP MENU -->
				<div class="hidden md:block">
					<div class="ml-10 flex items-center space-x-8">
						<a href="#about" class="text-gray-300 hover:text-brand-accent transition-colors text-sm font-bold uppercase tracking-wider">About</a>
						<a href="#services" class="text-gray-300 hover:text-brand-accent transition-colors text-sm font-bold uppercase tracking-wider">Services</a>
						<a href="#projects" class="text-gray-300 hover:text-brand-accent transition-colors text-sm font-bold uppercase tracking-wider">Projects</a>
						
						<!-- Call to Action Button -->
						<a href="#contact" class="bg-brand-accent text-brand-dark border-2 border-brand-accent hover:bg-transparent hover:text-brand-accent px-5 py-2.5 rounded font-heading font-bold transition-all uppercase tracking-wider text-sm shadow-[0_0_15px_rgba(251,191,36,0.2)]">
							Get a Quote
						</a>
					</div>
				</div>

				<!-- MOBILE MENU BUTTON -->
				<div class="md:hidden">
					<a href="#contact" class="text-brand-accent font-bold uppercase text-sm border border-brand-accent px-3 py-2 rounded hover:bg-brand-accent hover:text-brand-dark transition-colors">
						Contact Us
					</a>
				</div>
			</div>
		</div>
	</nav>

	<main>
		<!-- HERO SECTION -->
		<div class="relative pt-36 pb-20 sm:pb-24 overflow-hidden bg-brand-zinc">
			<!-- Background Grid Texture -->
			<div class="absolute inset-0 opacity-10 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-size-[24px_24px]"></div>

			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
				<div class="lg:grid lg:grid-cols-2 lg:gap-16 items-center">

					<!-- Text Content -->
					<div class="sm:text-center md:max-w-2xl md:mx-auto lg:text-left">
						<div class="inline-flex items-center text-brand-accent font-semibold tracking-wide uppercase text-sm mb-6 border border-brand-accent/30 bg-brand-accent/5 rounded-full px-3 py-1">
							<span class="w-2 h-2 bg-brand-accent rounded-full mr-2 animate-pulse"></span>
							Based in Whangarei, Northland
						</div>
						<h1 class="text-4xl tracking-tight font-extrabold text-white sm:text-5xl md:text-6xl lg:text-5xl xl:text-6xl font-heading leading-tight mb-6">
							Built Strong. <br class="hidden lg:inline">Built Right.
						</h1>
						<p class="mt-3 text-base text-gray-300 sm:mt-5 sm:text-xl lg:text-lg xl:text-xl leading-relaxed">
							Family owned builders with industrial discipline. 21+ years experience delivering complex retaining walls, concrete works, and residential renovations across Whangarei.
						</p>
						<div class="mt-8 sm:max-w-lg sm:mx-auto sm:text-center lg:text-left lg:mx-0 flex flex-col sm:flex-row gap-4">
							<a href="#contact" class="inline-flex items-center justify-center px-8 py-4 border border-transparent text-base font-bold rounded-md text-brand-dark bg-brand-accent hover:bg-white hover:scale-105 transition-all duration-200 shadow-lg uppercase tracking-wide">
								Email Us
							</a>
							<a href="#services" class="inline-flex items-center justify-center px-8 py-4 border-2 border-gray-600 text-base font-bold rounded-md text-white hover:border-brand-accent hover:text-brand-accent transition-all duration-200 uppercase tracking-wide">
								Our Services
							</a>
						</div>
					</div>

					<!-- Hero Image Slideshow -->
					<div class="mt-12 lg:mt-0">
						<div class="relative hero-slideshow">
							<!-- Industrial Frame effect -->
							<div class="absolute -inset-2 border-2 border-brand-accent/30 rounded-xl transform rotate-2 transition-transform"></div>
							<div class="relative rounded-xl overflow-hidden shadow-2xl h-[500px] lg:h-[600px]">
								<!-- Construction Image -->
								<img
									src="/construction.jpeg"
									alt="Industrial concrete construction site in Northland"
									class="hero-slide absolute inset-0 w-full h-full object-cover opacity-100 transition-opacity duration-1000"
								/>
								<!-- Rob Roy Image -->
								<img
									src="/robroy.jpeg"
									alt="Rob Roy Hotel relocation project - Victoria Park Tunnel"
									class="hero-slide absolute inset-0 w-full h-full object-cover opacity-0 transition-opacity duration-1000"
								/>
							</div>
						</div>
						<p class="text-gray-500 text-xs mt-3 text-center italic">Photos courtesy of Golden Bay Cement Bulk Store and Rob Roy Hotel Relocation projects</p>
					</div>

					<script>
						// Hero slideshow functionality
						let currentSlide = 0;
						const slides = document.querySelectorAll<HTMLImageElement>('.hero-slide');
						const totalSlides = slides.length;

						function showNextSlide() {
							// Hide current slide
							if (slides[currentSlide]) {
								slides[currentSlide].style.opacity = '0';
							}

							// Move to next slide
							currentSlide = (currentSlide + 1) % totalSlides;

							// Show next slide
							if (slides[currentSlide]) {
								slides[currentSlide].style.opacity = '1';
							}
						}

						// Change slide every 5 seconds
						setInterval(showNextSlide, 5000);
					</script>
				</div>
			</div>
		</div>

		<!-- ABOUT SECTION -->
		<section id="about" class="py-32 bg-brand-dark relative border-t border-gray-800">
			<!-- Subtle background texture -->
			<div class="absolute inset-0 opacity-5 bg-[radial-gradient(#4b5563_1px,transparent_1px)] bg-size-[16px_16px]"></div>

			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
				<div class="lg:grid lg:grid-cols-12 lg:gap-16 items-start">

					<!-- Left Column: The Image & Quote -->
					<div class="lg:col-span-5 mb-12 lg:mb-0">
						<div class="relative group mt-8">
							<!-- Industrial Frame effect -->
							<div class="absolute -inset-2 border-2 border-gray-700 rounded-xl transform -rotate-2 group-hover:-rotate-1 transition-transform"></div>
							<div class="relative rounded-xl overflow-hidden shadow-2xl bg-gray-800">
								<img src="/profile.jpg" alt="Reuben and Teneille Johnson, owners of Johnson & Sons Ltd" class="w-full h-auto grayscale contrast-125 hover:grayscale-0 transition-all duration-700 ease-in-out" />
							</div>

							<!-- Small Family Photo -->
							<div class="hidden lg:block absolute -bottom-14 -left-6 w-48 h-48 rounded-lg overflow-hidden shadow-xl border-2 border-brand-dark transform -rotate-3 hover:rotate-0 transition-transform z-10">
								<img src="/family.JPG" alt="Johnson & Sons family owners" class="w-full h-full object-cover" />
							</div>

							<!-- Floating Quote Card -->
							<div class="absolute -top-16 -right-6 bg-brand-accent p-4 rounded-lg shadow-xl max-w-[280px] transform rotate-1 border border-white/20">
								<svg class="h-6 w-6 text-black/20 mb-1" fill="currentColor" viewBox="0 0 24 24"><path d="M14.017 21L14.017 18C14.017 16.8954 14.9124 16 16.017 16H19.017C19.5693 16 20.017 15.5523 20.017 15V9C20.017 8.44772 19.5693 8 19.017 8H15.017C14.4647 8 14.017 8.44772 14.017 9V11C14.017 11.5523 13.5693 12 13.017 12H12.017V5H22.017V15C22.017 18.3137 19.3307 21 16.017 21H14.017ZM5.0166 21L5.0166 18C5.0166 16.8954 5.91203 16 7.0166 16H10.0166C10.5689 16 11.0166 15.5523 11.0166 15V9C11.0166 8.44772 10.5689 8 10.0166 8H6.0166C5.46432 8 5.0166 8.44772 5.0166 9V11C5.0166 11.5523 4.56889 12 4.0166 12H3.0166V5H13.0166V15C13.0166 18.3137 10.3303 21 7.0166 21H5.0166Z"/></svg>
								<p class="text-brand-dark font-bold text-xs leading-relaxed">
									"Thank you for being so fast and efficient."
								</p>
								<p class="text-brand-dark/60 text-[10px] font-bold uppercase mt-2">— Happy Client</p>
							</div>
						</div>
					</div>

					<!-- Right Column: The Story -->
					<div class="lg:col-span-7">
						<div class="inline-flex items-center px-3 py-1 rounded-full border border-yellow-500/30 bg-yellow-500/10 text-yellow-400 text-xs font-bold uppercase tracking-widest mb-6">
							Family Owned & Operated
						</div>
						<h2 class="text-3xl md:text-5xl font-heading font-bold text-white mb-8 leading-tight">
							Big Infrastructure Discipline.<br>
							<span class="text-gray-500">Small Business Care.</span>
						</h2>

						<div class="prose prose-lg prose-invert text-gray-400 mb-8">
							<p>
								Meet Reuben and Teneille Johnson. We own and run Johnson & Sons together in Whangarei. Reuben is the builder—the one you'll meet on site.
							</p>
							<p>
								His background isn't just residential—it's industrial.
							</p>
							<p>
								He spent over 10 years with <strong>Fletcher Engineering</strong> in Auckland, working as a foreman on major infrastructure projects. He worked on the Onewa Road widening, the Golden Bay cement bulk store and service centre, and the Victoria Park tunnel.
							</p>
							<p>
								He also served as a supervisor on the <strong>North Shore Hospital</strong> and the <strong>ANZ Tower extension</strong>.
							</p>
							<p>
								That's over a decade of experience on Auckland's biggest infrastructure projects—the kind where precision, safety, and "board-mark" quality aren't optional, they're standard.
							</p>
							<p>
								Now, he brings that same level of commercial discipline to your residential projects here in Northland.
							</p>
						</div>

						<!-- NZQA Certificate -->
						<div class="mb-8 p-4 bg-gray-900 border border-gray-700 rounded-lg">
							<div class="flex items-start gap-4">
								<div class="shrink-0">
									<img src="/certificate.png" alt="NZQA Carpentry Certificate - Reuben Johnson" class="w-32 h-auto rounded border-2 border-brand-accent shadow-lg" />
								</div>
								<div class="flex-1">
									<h3 class="text-white font-bold text-lg mb-2">NZQA Qualified Builder</h3>
									<p class="text-gray-400 text-sm leading-relaxed">
										Reuben holds a National Certificate in Carpentry, ensuring every project meets New Zealand building standards and industry best practices.
									</p>
								</div>
							</div>
						</div>

						<!-- The "Stats" Bar -->
						<dl class="grid grid-cols-3 gap-x-8 gap-y-8 border-t border-gray-800 pt-8">
							<div>
								<dt class="text-xs font-bold text-gray-500 uppercase tracking-wider">Experience</dt>
								<dd class="mt-1 text-4xl font-heading font-bold text-white">21<span class="text-brand-accent text-2xl">+</span></dd>
							</div>
							<div>
								<dt class="text-xs font-bold text-gray-500 uppercase tracking-wider">Commitment</dt>
								<dd class="mt-1 text-4xl font-heading font-bold text-white">100<span class="text-brand-accent text-2xl">%</span></dd>
							</div>
							<div>
								<dt class="text-xs font-bold text-gray-500 uppercase tracking-wider">Location</dt>
								<dd class="mt-1 text-xl font-heading font-bold text-white pt-2">Whangarei</dd>
							</div>
						</dl>
					</div>

				</div>
			</div>
		</section>

		<!-- SERVICES -->
		<section id="services" class="py-24 bg-brand-zinc">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-16">
					<h2 class="text-brand-accent font-semibold tracking-wide uppercase">What We Do</h2>
					<p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-white sm:text-4xl font-heading">
						Construction & Concrete Specialists
					</p>
				</div>

				<div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
					
					<!-- Service 1: The Specialty (Highlighted) -->
					<div class="bg-gray-900 p-8 rounded-r-lg border-l-4 border-brand-accent shadow-2xl hover:bg-gray-800 transition-colors group relative overflow-hidden">
						<!-- Subtle icon background -->
						<div class="absolute top-0 right-0 p-4 opacity-5 pointer-events-none">
							<svg class="w-32 h-32 text-white transform rotate-12" fill="currentColor" viewBox="0 0 24 24"><path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V5h14v14z"/></svg>
						</div>
						
						<div class="text-brand-accent mb-6 relative z-10">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" /></svg>
						</div>
						<h3 class="text-2xl font-bold text-white mb-3 font-heading">Concrete Specialist</h3>
						<p class="text-gray-400 leading-relaxed mb-6">
							We love the hard stuff. Insitu concrete pours, self-compacting concrete, and architectural board mark detailing.
						</p>
						<ul class="text-sm text-gray-500 space-y-3">
							<li class="flex items-center"><span class="w-1.5 h-1.5 bg-brand-accent rounded-full mr-3"></span>Complex Pours</li>
							<li class="flex items-center"><span class="w-1.5 h-1.5 bg-brand-accent rounded-full mr-3"></span>Precast Installation</li>
						</ul>
					</div>

					<!-- Service 2: Standard -->
					<div class="bg-brand-dark p-8 rounded-lg border border-gray-800 hover:border-gray-600 transition-colors group">
						<div class="text-gray-400 group-hover:text-brand-accent transition-colors mb-6">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" /></svg>
						</div>
						<h3 class="text-xl font-bold text-white mb-3 font-heading">Retaining Walls</h3>
						<p class="text-gray-400 leading-relaxed">
							Structural landscaping and heavy-duty retaining solutions for difficult sites in Northland. If it needs to hold, we build it.
						</p>
					</div>

					<!-- Service 3: Standard -->
					<div class="bg-brand-dark p-8 rounded-lg border border-gray-800 hover:border-gray-600 transition-colors group">
						<div class="text-gray-400 group-hover:text-brand-accent transition-colors mb-6">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" /></svg>
						</div>
						<h3 class="text-xl font-bold text-white mb-3 font-heading">Decks & Renovations</h3>
						<p class="text-gray-400 leading-relaxed">
							High-quality timber decking and house renovations. We handle the complex structural changes others shy away from.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- FEATURED PROJECT STORY -->
		<section class="py-24 bg-brand-dark relative overflow-hidden">
			<!-- Background element -->
			<div class="absolute right-0 top-0 w-1/3 h-full bg-brand-zinc/30 skew-x-12 transform origin-top-right"></div>
			
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
				<div class="bg-gray-900 rounded-lg border border-gray-700 shadow-2xl overflow-hidden">
					<div class="lg:grid lg:grid-cols-2">
						
						<!-- Left: The Hook -->
						<div class="p-8 md:p-12 bg-brand-zinc border-r border-gray-700 flex flex-col justify-center">
							<div class="inline-flex items-center text-brand-accent font-bold tracking-widest uppercase text-xs mb-4">
								<span class="w-8 h-0.5 bg-brand-accent mr-3"></span>
								Project Spotlight
							</div>
							<h2 class="text-3xl md:text-4xl font-heading font-bold text-white mb-6">
								The Retirement Home
							</h2>
							<div class="border-l-4 border-brand-accent pl-6 py-2 bg-black/20 rounded-r-md">
								<p class="text-white text-lg font-medium italic">
									"The estimate was a week's work. We had it sorted in two days."
								</p>
							</div>
							<div class="mt-8 grid grid-cols-2 gap-4">
								<div class="bg-brand-dark p-4 rounded border border-gray-700">
									<span class="block text-gray-500 text-xs uppercase tracking-wider">The Challenge</span>
									<span class="block text-white font-bold">Sagging Floors</span>
								</div>
								<div class="bg-brand-dark p-4 rounded border border-gray-700">
									<span class="block text-gray-500 text-xs uppercase tracking-wider">The Outcome</span>
									<span class="block text-white font-bold">Market Ready</span>
								</div>
							</div>
						</div>

						<!-- Right: The Story -->
						<div class="p-8 md:p-12 flex flex-col justify-center">
							<div class="prose prose-lg prose-invert text-gray-400">
								<p class="mb-4">
									Just before we officially started Johnson & Sons, I got a call from a mate about an older couple preparing their family home for sale. Their retirement fund depended on getting it market-ready, but the floor had sagged badly over the years.
								</p>
								<p class="mb-4">
									We fixed the floor in two days—well under the expected week. But here's the thing about residential renovations: <strong class="text-white">once you open up an old home, you find everything else that needs attention.</strong>
								</p>
								<p class="mb-6">
									That two-day fix turned into 14 weeks of work. We stayed to help them get the entire house right for sale.
								</p>
								<p class="text-white font-bold border-t border-gray-700 pt-6">
									It's the kind of project that reminds you why we do this. Not just to pour concrete or hang timber, but to help people move forward with the next chapter of their lives.
								</p>
							</div>
							<div class="mt-8 flex items-center gap-3">
								<div class="h-10 w-10 rounded-full bg-brand-accent flex items-center justify-center text-brand-dark font-bold">
									<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
								</div>
								<span class="text-sm text-gray-400 font-medium">The Johnson & Sons Difference</span>
							</div>
						</div>

					</div>
				</div>
			</div>
		</section>

		<!-- PROJECT GALLERY -->
		<section id="projects" class="py-24 bg-brand-dark">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<h2 class="text-3xl font-heading font-bold text-white mb-10 text-center uppercase tracking-wide">Recent Work</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

					<div class="group relative overflow-hidden rounded-lg border border-gray-800 bg-gray-900">
						<div class="aspect-w-3 aspect-h-4">
							<img src="/work-retaining.jpg" alt="Timber Retaining Wall Construction Whangarei" class="w-full h-80 object-cover transition-transform duration-700 group-hover:scale-110 opacity-80 group-hover:opacity-100" />
						</div>
						<div class="absolute inset-0 bg-linear-to-t from-black/90 via-black/20 to-transparent flex items-end p-6">
							<h3 class="text-white font-bold text-lg translate-y-2 group-hover:translate-y-0 transition-transform">Retaining Construction</h3>
						</div>
					</div>

					<div class="group relative overflow-hidden rounded-lg border border-gray-800 bg-gray-900">
						<div class="aspect-w-3 aspect-h-4">
							<img src="/deck-2.png" alt="Custom Timber Deck Construction Northland" class="w-full h-80 object-cover transition-transform duration-700 group-hover:scale-110 opacity-80 group-hover:opacity-100" />
						</div>
						<div class="absolute inset-0 bg-linear-to-t from-black/90 via-black/20 to-transparent flex items-end p-6">
							<h3 class="text-white font-bold text-lg translate-y-2 group-hover:translate-y-0 transition-transform">Timber Decking</h3>
						</div>
					</div>

					<div class="group relative overflow-hidden rounded-lg border border-gray-800 bg-gray-900">
						<div class="aspect-w-3 aspect-h-4">
							<img src="/louvre.png" alt="Automated Louvre Roof Installation" class="w-full h-80 object-cover transition-transform duration-700 group-hover:scale-110 opacity-80 group-hover:opacity-100" />
						</div>
						<div class="absolute inset-0 bg-linear-to-t from-black/90 via-black/20 to-transparent flex items-end p-6">
							<h3 class="text-white font-bold text-lg translate-y-2 group-hover:translate-y-0 transition-transform">Louvre Systems</h3>
						</div>
					</div>

					<div class="group relative overflow-hidden rounded-lg border border-gray-800 bg-gray-900">
						<div class="aspect-w-3 aspect-h-4">
							<img src="/lourve-2.png" alt="Louvre Roof Construction Progress" class="w-full h-80 object-cover transition-transform duration-700 group-hover:scale-110 opacity-80 group-hover:opacity-100" />
						</div>
						<div class="absolute inset-0 bg-linear-to-t from-black/90 via-black/20 to-transparent flex items-end p-6">
							<h3 class="text-white font-bold text-lg translate-y-2 group-hover:translate-y-0 transition-transform">Outdoor Living</h3>
						</div>
					</div>

					<div class="group relative overflow-hidden rounded-lg border border-gray-800 bg-gray-900">
						<div class="aspect-w-3 aspect-h-4">
