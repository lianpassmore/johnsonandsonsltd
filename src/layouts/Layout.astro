---
// src/layouts/Layout.astro
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en-NZ" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Johnson & Sons Ltd. Qualified Builders in Whangarei specializing in complex retaining walls, concrete construction, decks, and residential renovations. 21+ years experience." />
		<meta name="viewport" content="width=device-width" />
		
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

        <!-- SEO & AI Schema Markup -->
        <script type="application/ld+json">
        {
          "@context": "https://schema.org",
          "@type": "GeneralContractor",
          "name": "Johnson & Sons Ltd",
          "image": "https://johnsonandsons.co.nz/logo-white.svg", 
          "description": "Family-owned construction company in Whangarei specializing in architectural concrete, retaining walls, and renovations. Industrial discipline applied to residential projects.",
          "address": {
            "@type": "PostalAddress",
            "addressLocality": "Whangarei",
            "addressRegion": "Northland",
            "addressCountry": "NZ"
          },
          "geo": {
            "@type": "GeoCoordinates",
            "latitude": "-35.7251", 
            "longitude": "174.3237"
          },
          "url": "https://johnsonandsons.co.nz",
          "telephone": "+642108770005",
          "email": "johnsonandsonsltd@yahoo.com",
          "priceRange": "$$",
          "openingHoursSpecification": {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": [
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday"
            ],
            "opens": "07:00",
            "closes": "17:00"
          },
          "founder": {
            "@type": "Person",
            "name": "Reuben Johnson",
            "jobTitle": "Director & Lead Builder",
            "description": "NZQA Qualified Builder with over 21 years experience, including industrial infrastructure projects with Fletcher Engineering."
          },
          "areaServed": [
            "Whangarei",
            "Kamo",
            "Tikipunga",
            "Onerahi",
            "Maunu"
          ],
          "hasCredential": {
            "@type": "EducationalOccupationalCredential",
            "name": "NZQA National Certificate in Carpentry"
          }
        }
        </script>
	</head>
	<body class="bg-brand-dark text-gray-100 font-sans antialiased selection:bg-brand-accent selection:text-brand-dark">
		
		<!-- Facebook SDK Start -->
		<div id="fb-root"></div>
		<script is:inline>
			(function(d, s, id) {
			var js, fjs = d.getElementsByTagName(s)[0];
			if (d.getElementById(id)) return;
			js = d.createElement(s); js.id = id;
			js.src = "https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v19.0";
			fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));
		</script>
		<!-- Facebook SDK End -->

		<slot />
	</body>
</html>

<style is:global>
	/* Custom scrollbar for that industrial feel */
	::-webkit-scrollbar {
		width: 10px;
	}
	::-webkit-scrollbar-track {
		background: #1a1a1a;
	}
	::-webkit-scrollbar-thumb {
		background: #444;
		border-radius: 2px;
	}
	::-webkit-scrollbar-thumb:hover {
		background: #555;
	}
</style>